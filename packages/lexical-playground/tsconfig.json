{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "../../libdefs/globals"],
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "paths": {
      "shared/canUseDOM": ["../shared/src/canUseDOM.ts"],
      "shared/caretFromPoint": ["../shared/src/caretFromPoint.ts"],
      "shared/simpleDiffWithCursor": ["packages/shared/src/simpleDiffWithCursor.ts"],
      "shared/invariant": ["../shared/src/invariant.ts"],
      "shared/warnOnlyOnce": ["../shared/src/warnOnlyOnce.ts"],
      "shared/environment": ["../shared/src/environment.ts"],
      "shared/useLayoutEffect": ["../shared/src/useLayoutEffect.ts"]
    }
  },
  "include": ["../**/*", "../../**/*"],
  // "exclude": ["**/__tests__/**", "**/dist/**", "**/npm/**", "**/node_modules/**", "../playwright-core/**"],
  "typedocOptions": {
    "logLevel": "Verbose"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true
  }
}
