{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "./src/libdefs/globals"],
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "incremental": true,
    "paths": {
      "shared/*": ["./src/shared/*"],
      "shared/canUseDOM": ["./src/shared/canUseDOM.ts"],
      "shared/caretFromPoint": ["./src/shared/caretFromPoint.ts"],
      "shared/simpleDiffWithCursor": ["package/src/shared/simpleDiffWithCursor.ts"],
      "shared/invariant": ["./src/shared/invariant.ts"],
      "shared/warnOnlyOnce": ["./src/shared/warnOnlyOnce.ts"],
      "shared/environment": ["./src/shared/environment.ts"],
      "shared/useLayoutEffect": ["./src/shared/useLayoutEffect.ts"]
    }
  },
  "include": ["./**/*"],
  // "exclude": ["**/__tests__/**", "**/dist/**", "**/npm/**", "**/node_modules/**", "../playwright-core/**"],
  "typedocOptions": {
    "logLevel": "Verbose"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true
  }
}
